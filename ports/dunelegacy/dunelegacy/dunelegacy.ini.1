[config]
repeat_delay = 500
repeat_rate = 1
mouse_delay = 1
mouse_slow_scale = 30
deadzone_mode = axial
deadzone_scale = 8
deadzone_x = 1000
deadzone_y = 1000
deadzone_triggers = 3000
dpad_mouse_normalize = true
absolute_center_x = 0
absolute_center_y = 0
absolute_step = 0

[controls]

overlay = "clear"

a = "mouse_left"
b = "a"
x = "m"
y = "c"

l1 = "r"
l2 = "g"
r1 = "h"
r2 = "f"
r3 = mouse_slow

start = "enter"
back = "esc" hold_state hk_hotkey

up = "u"
down = "d"
left = "p"
right = "p"

left_analog = mouse_movement

[controls:hk_hotkey]

overlay = "parent"
mouse_wheel_amount = parent
exclusive = parent

l1 = "t"
r1 = "f4"
r2 = "f6"
