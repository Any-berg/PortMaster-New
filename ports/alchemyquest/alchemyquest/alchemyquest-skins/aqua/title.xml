<!--
	This file describes Title state, when a presentation is displayed with a 
	demo player
-->
<resources>
	
	<!-- Main section -->
	<section name="title">
		
		<!-- Start message, to tell the user how begin a new game -->
		<section name = "start_message">
			<!-- Coords -->			
			<integer name = "top" value = "450" />
			<integer name = "left" value = "190" />
			
			<!-- Sprite -->
			<sprite name = "sprite">
				<image file="dialogs/title/start_message.png">
					<grid pos="0,0" size="420,80" />
				</image>
				<image file="dialogs/title/start_message.png">
					<grid pos="0,0" size="0,0" />
				</image>
				
				<animation speed="900" />
			</sprite>
		</section>

		<string name="init_state" value="menu_select.xml" />
		
		<!-- Key demo sprites, to explain to the user which keys they will use -->
		<section name="keydemo">
			
			<!-- Left key -->
			<sprite name = "left">
				<image file="dialogs/title/key-left.png">
					<grid pos="0,0" size="16,16" />
					<grid pos="16,0" size="16,16" />
				</image>
				<animation speed="200" />
			</sprite>
			
			<!-- Up key -->
			<sprite name = "up">
				<image file="dialogs/title/key-up.png" >
					<grid pos="0,0" size="16,16" />
					<grid pos="16,0" size="16,16" />
				</image>
				<animation speed="200" />
			</sprite>
			
			<!-- Right key -->
			<sprite name = "right">
				<image file="dialogs/title/key-right.png">
					<grid pos="0,0" size="16,16" />
					<grid pos="16,0" size="16,16" />
				</image>
				<animation speed="200" />
			</sprite>
			
			<!-- Down key -->
			<sprite name = "down">
				<image file="dialogs/title/key-down.png">
					<grid pos="0,0" size="16,16" />
					<grid pos="16,0" size="16,16" />
				</image>
				<animation speed="200" />
			</sprite>
			
			<!-- Escape key -->		
			<sprite name = "escape">
				<image file="dialogs/title/key-escape.png">
					<grid pos="0,0" size="16,16" />
					<grid pos="16,0" size="16,16" />
				</image>
				<animation speed="200" />
			</sprite>
			
			<!-- Options key -->		
			<sprite name = "options">
				<image file="dialogs/title/key-options.png">
					<grid pos="0,0" size="16,16" />
					<grid pos="16,0" size="16,16" />
				</image>
				<animation speed="200" />
			</sprite>
			
		</section>
		
		<!-- Help section, display a help tutorial -->
		<section name="help">
			<!-- Now, we will write each sentence -->
			
			<!-- Welcome to OpenAlchemist ! -->
			<section name="1">
				<sprite name = "sentence">
					<image file="dialogs/title/sentences/01.png" />
				</sprite>
				<integer name = "top"  value = "0"  />
				<integer name = "left" value = "0"   />
				<integer name = "time" value = "5000" />
			</section>
			
			<!-- This is your pieces -->
			<section name="2">
				<string name="sentence_text" value="THESE ARE YOUR PIECES" />
				<integer name = "top"  value = "68"  />
				<integer name = "left" value = "95"   />
				<integer name = "time" value = "3000" />
			</section>
			
			<!-- You can move them to the left... -->
			<section name="3">
				<string name="sentence_text" value="YOU CAN MOVE THEM:TO THE LEFT..." />
				<integer name = "top"  value = "119"  />
				<integer name = "left" value = "95"  />
				<integer name = "time" value = "3000" />
			</section>
			
			<!-- ...or to the right ! -->
			<section name="4">
				<string name="sentence_text" value="...OR TO THE RIGHT !" />
				<integer name = "top"  value = "119"  />
				<integer name = "left" value = "95"   />
				<integer name = "time" value = "3000" />
			</section>
			
			<!-- You can also rotate pieces... -->
			<section name="5">
				<string name="sentence_text" value="YOU CAN ALSO ROTATE:PIECES..." />
				<integer name = "top"  value = "119"  />
				<integer name = "left" value = "95"   />
				<integer name = "time" value = "3000" />
			</section>
			
			<!-- ...and make them fall ! -->
			<section name="6">
				<string name="sentence_text" value="...AND MAKE THEM FALL !" />
				<integer name = "top"  value = "119"  />
				<integer name = "left" value = "95"   />
				<integer name = "time" value = "3000" />
			</section>
			
			<!-- Select the position... -->
			<section name="7">
				<string name="sentence_text" value="SELECT THE POSITION..." />
				<integer name = "top"  value = "68"  />
				<integer name = "left" value = "95"   />
				<integer name = "time" value = "3000" />
			</section>
			
			<!-- ...and fall ! -->
			<section name="8">
				<string name="sentence_text" value="...AND FALL !" />
				<integer name = "top"  value = "68"  />
				<integer name = "left" value = "95"   />
				<integer name = "time" value = "3000" />
			</section>
			
			<!-- When you have more than 3 same items... -->
			<section name="9">
				<string name="sentence_text" value="WHEN YOU HAVE MORE THAN:3 OF THE SAME ITEMS..." />
				<integer name = "top"  value = "119"  />
				<integer name = "left" value = "95"   />
				<integer name = "time" value = "3000" />
			</section>
			
			<!-- ...they're destroyed... -->
			<section name="10">
				<string name="sentence_text" value="...THEY'RE DESTROYED..." />
				<integer name = "top"  value = "119"  />
				<integer name = "left" value = "95"   />
				<integer name = "time" value = "3000" />
			</section>
			
			<!-- ...and a new one is created ! -->
			<section name="11">
				<string name="sentence_text" value="...AND A NEW ONE IS:CREATED !" />
				<integer name = "top"  value = "119"  />
				<integer name = "left" value = "95"   />
				<integer name = "time" value = "3000" />
			</section>
			
			<!-- Align more than 3 items and you get bonus ! -->
			<section name="12">
				<string name="sentence_text" value="ALIGN MORE THAN 3 ITEMS:AND YOU GET A BONUS !" />
				<integer name = "top"  value = "119"  />
				<integer name = "left" value = "95"   />
				<integer name = "time" value = "3000" />
			</section>
			
			
			<!-- You can also open the game menu... -->
			<section name="13">
				<string name="sentence_text" value="YOU CAN ALSO OPEN THE:GAME MENU..." />
				<integer name = "top"  value = "119"  />
				<integer name = "left" value = "95"   />
				<integer name = "time" value = "3000" />
			</section>
			
			<!-- ...or the options menu ! -->
			<section name="14">
				<string name="sentence_text" value="...OR THE OPTIONS MENU !" />
				<integer name = "top"  value = "119"  />
				<integer name = "left" value = "95"   />
				<integer name = "time" value = "3000" />
			</section>
			
			<!-- Now you know everything... -->
			<section name="15">
				<string name="sentence_text" value="NOW YOU KNOW EVERYTHING..." />
				<integer name = "top"  value = "119"  />
				<integer name = "left" value = "128"   />
				<integer name = "time" value = "3000" />
			</section>
			
			<!-- ...so start a new game and have fun ! -->
			<section name="16">
				<string name="sentence_text" value="...SO START A NEW GAME:AND HAVE FUN !" />
				<integer name = "top"  value = "119"  />
				<integer name = "left" value = "95"   />
				<integer name = "time" value = "6000" />
			</section>
				
		</section>
		
	</section>
</resources>

