<!--
    This file describes Select menu
-->
<resources>
	
	<!-- Main section -->
	<section name="screen">
		
		<!-- Alpha apparition, set "true" if want the menu to appear gradually (only avalaible with OpenGL) -->
		<boolean name = "alpha_appearing" value = "false" />
		<!-- Max alpha value -->
		<integer name = "alpha_max" value = "65" />
		<boolean name = "quit_enabled" value = "false" />
		
		
		<!-- Sprite for the background -->
		<sprite name="full_background">
			<image file="dialogs/select/background.png">
				<grid pos="0,0" size="256,240" />
			</image>
		</sprite>
		<sprite name="background">
			<image file="dialogs/select/dialog.png">
				<grid pos="0,0" size="256,128" />
			</image>
		</sprite>
		<string name="label" value="SELECT ELEMENT" />
		
		<section name="menu">
			<!-- Elements item -->
			<section name="elements">
				<string name="type" value="multichoicetext" />
				<integer name="width" value="100" />
				<integer name="height" value="16" />
				<string name="text" value="" />
				<integer name="top" value="48" />
				<integer name="left" value="32" />
				<string name="action" value="change_element" />

				<!-- Render choices -->
				<section name="choice-position">
					<integer name="left" value="32" />
				</section>

				<section name="choices">
					<string name="0" value="@elements" />
				</section>
			</section>

			<!-- Ready item-->
			<section name="ready">
				<string name="type" value="basictext" />
				<integer name="width" value="100" />
				<integer name="height" value="16" />
				<string name="text" value="READY" />
				<integer name="top" value="80" />
				<integer name="left" value="32" />
				<string name="action" value="ready" />
			</section>
		</section>
		<section name="menu2">
			<!-- Elements item -->
			<section name="elements">
				<string name="type" value="multichoicetext" />
				<integer name="width" value="100" />
				<integer name="height" value="16" />
				<string name="text" value="" />
				<integer name="top" value="48" />
				<integer name="left" value="160" />
				<string name="action" value="change_element" />

				<!-- Render choices -->
				<section name="choice-position">
					<integer name="left" value="160" />
				</section>

				<section name="choices">
					<string name="0" value="@elements" />
				</section>
			</section>

			<!-- Ready item-->
			<section name="ready">
				<string name="type" value="basictext" />
				<integer name="width" value="100" />
				<integer name="height" value="16" />
				<string name="text" value="READY" />
				<integer name="top" value="80" />
				<integer name="left" value="160" />
				<string name="action" value="ready" />
			</section>
		</section>
		
	</section>
	
</resources>
