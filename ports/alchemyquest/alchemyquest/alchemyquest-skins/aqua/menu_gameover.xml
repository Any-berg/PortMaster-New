		<section name="new_game_question">
		
			<section name="yes">
				<string name="text" value="YES" />
				
				<integer name="top" value="157" />
				<integer name="left" value="77" />
				
			</section>
			
			<section name="no">
				<string name="text" value="NO" />
				
				<integer name="top" value="157" />
				<integer name="left" value="161" />
				
			</section>
			
		</section>
		 
		
	</section>
