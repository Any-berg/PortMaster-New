<!--
	This file describes main graphics elements, such as game background, 
	area size and position, score font, progress-bar, etc...
-->
<resources>
	
	<!-- This logo is painted in Skin Selector Menu -->
	<image name = "logo">
		<image-file file = "misc/logo.png"/>	
