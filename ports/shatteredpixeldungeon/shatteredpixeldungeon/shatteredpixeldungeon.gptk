[config]
deadzone_triggers = 3000
mouse_delay = 16
mouse_slow_scale = 30

deadzone_mode = axial
deadzone = 12000
deadzone_scale = 10
deadzone_delay = 16

[controls]
exclusive = true

back = j # journal 
guide = "\ 
start = esc # back

a = q # Attack Enemy 
b = e # Examine
x = p # Quickslot selector
y = o # Inventory selector

l2 = + # zoom in
l1 = mouse_right # right click
r2 = - # zoom out
r1 = mouse_left # left click

up = x # Special Action
down = r # Resume Motion
left = c # Pickup Item
right = tab # Next target


right_analog = mouse_movement
r3 = mouse_slow

left_analog_up = w
left_analog_down = s
left_analog_left = a
left_analog_right = d


[controls:analog_1]
# Controls for devices with one analog stick.
overlay = controls

guide = push_state movemode
left_analog = mouse_movement
l3 = mouse_slow

[controls:movemode]
overlay = controls

guide = pop_state
left_analog_up = w
left_analog_down = s
left_analog_left = a
left_analog_right = d




